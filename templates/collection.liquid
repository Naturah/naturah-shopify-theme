{%- comment -%}
  Get the products per page setting from the section. 
  NOTE: This requires the section ID to be 'main' as defined in the original JSON.
  If the section ID changes, this needs to be updated.
{%- endcomment -%}
{%- liquid
  assign products_per_page = 24 # Default fallback
  if section.settings.products_per_page
    assign products_per_page = section.settings.products_per_page
  else
    for block in layout.blocks
      if block.type == 'collection-template' and block.id == 'main'
        assign products_per_page = block.settings.products_per_page | default: 24
        break
      endif
    endfor
  endif
-%}

{%- paginate collection by products_per_page -%}

{% comment %} Render the main collection section {% endcomment %}
{% section 'main' %}

{% comment %} Render the pagination controls {% endcomment %}
{% if paginate.pages > 1 %}
  <div class="container mx-auto px-4"> {# Added container for consistent spacing #}
    <div class="pagination-container flex justify-center my-8 md:my-12"> {# Added margin #}
      <nav class="pagination flex items-center space-x-2" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
        {%- if paginate.previous -%}
          <a href="{{ paginate.previous.url }}" class="pagination-prev px-3 py-2 rounded-md border border-naturah-cream hover:bg-naturah-cream/20 transition-colors flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
            </svg>
            <span>{{ 'general.pagination.previous' | t }}</span>
          </a>
        {%- endif -%}

        {%- for part in paginate.parts -%}
          {%- if part.is_link -%}
            <a href="{{ part.url }}" class="pagination-number px-4 py-2 rounded-md border border-naturah-cream hover:bg-naturah-cream/20 transition-colors">{{ part.title }}</a>
          {%- else -%}
            {%- if part.title == paginate.current_page -%}
              <span class="pagination-current px-4 py-2 rounded-md bg-naturah-green text-white">{{ part.title }}</span>
            {%- else -%}
              <span class="pagination-ellipsis px-4 py-2">{{ part.title }}</span>
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}

        {%- if paginate.next -%}
          <a href="{{ paginate.next.url }}" class="pagination-next px-3 py-2 rounded-md border border-naturah-cream hover:bg-naturah-cream/20 transition-colors flex items-center">
            <span>{{ 'general.pagination.next' | t }}</span>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
            </svg>
          </a>
        {%- endif -%}
      </nav>
    </div>
  </div>
{% endif %}

{%- endpaginate -%}