{% comment %}
  @file Announcement Bar Section
  @summary A customizable announcement bar
  @customizable
{% endcomment %}

{% if section.blocks.size > 0 %}
  <div class="announcement-bar bg-brand-medium text-neutral-dark">
    <div class="container mx-auto px-4">
      <div class="announcement-bar-slider py-2 text-center text-sm">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'announcement' %}
              <div class="announcement-item" {{ block.shopify_attributes }}>
                {% if block.settings.text != blank %}
                  {% if block.settings.link != blank %}
                    <a href="{{ block.settings.link }}" class="announcement-link text-neutral-dark hover:text-neutral-dark/80">
                      {{ block.settings.text }}
                    </a>
                  {% else %}
                    <span class="announcement-text">{{ block.settings.text }}</span>
                  {% endif %}
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

<style>
  .announcement-bar {
    background-color: var(--color-brand-medium);
    color: var(--color-neutral-dark);
    font-size: 0.875rem;
  }
  
  .announcement-link {
    color: var(--color-neutral-dark);
    text-decoration: none;
  }
  
  .announcement-link:hover {
    text-decoration: underline;
  }
</style>

{% schema %}
{
  "name": "Announcement Bar",
  "tag": "section",
  "class": "section-announcement-bar",
  "max_blocks": 12,
  "settings": [],
  "blocks": [
    {
      "name": "Announcement",
      "type": "announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Welcome to Naturah - Free shipping on all orders over $75"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "select",
          "id": "color_scheme",
          "label": "Color scheme",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "accent",
              "label": "Accent"
            }
          ],
          "default": "primary"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}

