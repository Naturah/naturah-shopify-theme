{% comment %}
  @file Values Section
  @summary Shows company values in a responsive grid layout
  @customizable
{% endcomment %}

<section class="values-section py-16 px-4 bg-naturah-cream">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-12">
      <h2 class="section-title text-4xl mb-4">{{ section.settings.title }}</h2>
      {% if section.settings.subtitle != blank %}
        <p class="text-lg text-naturah-black/80 max-w-3xl mx-auto">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-{{ section.settings.columns }} gap-8">
      {% for block in section.blocks %}
        <div class="value-item text-center flex flex-col items-center">
          {% if block.settings.icon != blank %}
            <div class="value-icon mb-4">
              <img src="{{ block.settings.icon | image_url: width: 120, height: 120, crop: 'center' }}" 
                   alt="{{ block.settings.title | escape }}" 
                   width="120" 
                   height="120" 
                   loading="lazy" 
                   class="w-16 h-16 md:w-20 md:h-20 object-contain">
            </div>
          {% endif %}
          
          <h3 class="text-xl font-bold mb-3">{{ block.settings.title }}</h3>
          
          {% if block.settings.description != blank %}
            <p class="text-naturah-black/70">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Values",
  "tag": "section",
  "class": "section-values",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Values"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "What we stand for"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Columns",
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "value",
      "name": "Value",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Value Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Share your company values to engage customers and build trust."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Values",
      "blocks": [
        {
          "type": "value"
        },
        {
          "type": "value"
        },
        {
          "type": "value"
        }
      ]
    }
  ]
}
{% endschema %}