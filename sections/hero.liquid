{% comment %}
  @file Hero Banner Section
  @summary Hero banner with image, text and call-to-action button
  @customizable
{% endcomment %}

<section class="hero-banner relative container mx-auto px-4 py-16" id="Hero-{{ section.id }}">
  <div class="hero-banner-inner relative overflow-hidden rounded-lg aspect-[16/9]">
    <div class="hero-media absolute inset-0 w-full h-full overflow-hidden">
      {% if section.settings.image != blank %}
        <img 
          src="{{ section.settings.image | image_url: width: 1500 }}"
          alt="{{ section.settings.image.alt | escape }}"
          class="absolute inset-0 w-full h-full object-cover object-center"
          loading="eager"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}">

        {% if section.settings.overlay_opacity > 0 %}
          <div class="absolute inset-0 bg-black opacity-{{ section.settings.overlay_opacity }}"></div>
        {% endif %}
      {% else %}
        <div class="absolute inset-0 bg-gray-200 flex items-center justify-center">
          <svg class="w-32 h-32 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      {% endif %}
    </div>

    <div class="hero-content-container relative h-full flex items-center justify-center">
      <div class="hero-content max-w-xl p-6 md:p-8 bg-white/80 backdrop-blur-sm rounded-lg shadow-sm">
        {% if section.settings.subheading != blank %}
          <div class="hero-subheading text-sm md:text-base uppercase tracking-wider text-brand-dark mb-3">
            {{ section.settings.subheading }}
          </div>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h2 class="hero-heading text-3xl md:text-4xl lg:text-5xl font-bold mb-4 text-neutral-dark">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.text != blank %}
          <div class="hero-text text-base md:text-lg mb-8 text-neutral-medium">
            {{ section.settings.text }}
          </div>
        {% endif %}

        {% if section.settings.button_label != blank %}
          <div class="hero-buttons flex flex-wrap gap-4">
            <a href="{{ section.settings.button_link }}" class="hero-button inline-flex items-center justify-center px-6 py-3 rounded-md font-medium text-base transition-colors duration-200 bg-brand-dark text-white hover:bg-neutral-dark">
              {{ section.settings.button_label }}
            </a>
            
            {% if section.settings.button_label_2 != blank %}
              <a href="{{ section.settings.button_link_2 }}" class="hero-button-2 inline-flex items-center justify-center px-6 py-3 rounded-md font-medium text-base transition-colors duration-200 bg-transparent border-2 border-brand-dark text-brand-dark hover:bg-brand-dark/5">
                {{ section.settings.button_label_2 }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section-hero-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "subheading",
      "default": "Welcome to",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Naturah",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Natural and organic products for a healthier lifestyle.</p>",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Shop Now",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "default": "/collections/all",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Second button text"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Second button link"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 9,
      "step": 1,
      "default": 0,
      "label": "Overlay opacity"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "settings": {
        "heading": "Welcome to Naturah",
        "text": "<p>Natural and organic products for a healthier lifestyle.</p>",
        "button_label": "Shop Now",
        "button_link": "/collections/all"
      }
    }
  ]
}
{% endschema %}
