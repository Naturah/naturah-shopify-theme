{% comment %}
  @file Hero Banner Section
  @summary Hero banner with image, text and call-to-action button
  @customizable
{% endcomment %}

<section class="hero-banner relative {% if section.settings.full_width %}w-full{% else %}container mx-auto px-4{% endif %} {% if section.settings.section_height == 'small' %}py-12 md:py-16{% elsif section.settings.section_height == 'medium' %}py-16 md:py-24{% else %}py-20 md:py-32{% endif %}" id="Hero-{{ section.id }}">
  <div class="hero-banner-inner relative overflow-hidden {% if section.settings.rounded_corners %}rounded-lg{% endif %} {% if section.settings.section_height == 'small' %}aspect-[16/7] md:aspect-[21/9]{% elsif section.settings.section_height == 'medium' %}aspect-[16/9] md:aspect-[21/9]{% else %}aspect-[16/9] md:aspect-[21/8]{% endif %}">
    <div class="hero-media absolute inset-0 w-full h-full overflow-hidden">
      {% if section.settings.image != blank %}
        <img 
          srcset="
            {%- if section.settings.image.width >= 375 -%}{{ section.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
            {%- if section.settings.image.width >= 550 -%}{{ section.settings.image | image_url: width: 550 }} 550w,{%- endif -%}
            {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
            {%- if section.settings.image.width >= 1100 -%}{{ section.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
            {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
            {%- if section.settings.image.width >= 2200 -%}{{ section.settings.image | image_url: width: 2200 }} 2200w,{%- endif -%}
            {{ section.settings.image | image_url }} {{ section.settings.image.width }}w
          "
          src="{{ section.settings.image | image_url: width: 1500 }}"
          sizes="100vw"
          alt="{{ section.settings.image.alt | escape }}"
          loading="eager"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
          class="absolute inset-0 w-full h-full object-cover {% if section.settings.image_position == 'top' %}object-top{% elsif section.settings.image_position == 'bottom' %}object-bottom{% elsif section.settings.image_position == 'left' %}object-left-top{% elsif section.settings.image_position == 'right' %}object-right-top{% else %}object-center{% endif %}"
        >

        {% if section.settings.overlay_opacity > 0 %}
          <div class="absolute inset-0 bg-black opacity-{{ section.settings.overlay_opacity }}"></div>
        {% endif %}
      {% else %}
        <div class="absolute inset-0 bg-background flex items-center justify-center">
          {% render 'icon-leaf', class: 'w-32 h-32 text-brand-light' %}
        </div>
      {% endif %}
    </div>

    <div class="hero-content-container relative h-full flex items-center {% if section.settings.content_position contains 'left' %}justify-start{% elsif section.settings.content_position contains 'right' %}justify-end{% else %}justify-center{% endif %} {% if section.settings.content_position contains 'top' %}items-start pt-12{% elsif section.settings.content_position contains 'bottom' %}items-end pb-12{% else %}items-center{% endif %}">
      <div class="hero-content max-w-xl p-6 md:p-8 {% if section.settings.content_box %}bg-white/80 backdrop-blur-sm rounded-lg shadow-sm{% endif %}">
        {% if section.settings.subheading != blank %}
          <div class="hero-subheading text-sm md:text-base uppercase tracking-wider {% if section.settings.image != blank and section.settings.overlay_opacity > 3 and section.settings.content_box == false %}text-white{% else %}text-brand-dark{% endif %} mb-3">
            {{ section.settings.subheading }}
          </div>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h2 class="hero-heading text-3xl md:text-4xl lg:text-5xl font-bold mb-4 {% if section.settings.image != blank and section.settings.overlay_opacity > 3 and section.settings.content_box == false %}text-white{% else %}text-neutral-dark{% endif %}">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.text != blank %}
          <div class="hero-text text-base md:text-lg mb-8 {% if section.settings.image != blank and section.settings.overlay_opacity > 3 and section.settings.content_box == false %}text-white/90{% else %}text-neutral-medium{% endif %}">
            {{ section.settings.text }}
          </div>
        {% endif %}

        {% if section.settings.button_label != blank %}
          <div class="hero-buttons flex flex-wrap gap-4">
            <a href="{{ section.settings.button_link }}" class="hero-button inline-flex items-center justify-center px-6 py-3 rounded-md font-medium text-base transition-colors duration-200 {% if section.settings.button_style == 'primary' %}bg-brand-dark text-white hover:bg-neutral-dark{% elsif section.settings.button_style == 'secondary' %}bg-brand-medium text-neutral-dark hover:bg-brand-light{% elsif section.settings.button_style == 'outline' %}bg-transparent border-2 border-brand-dark text-brand-dark hover:bg-brand-dark/5{% endif %}">
              {{ section.settings.button_label }}
            </a>
            
            {% if section.settings.button_label_2 != blank %}
              <a href="{{ section.settings.button_link_2 }}" class="hero-button-2 inline-flex items-center justify-center px-6 py-3 rounded-md font-medium text-base transition-colors duration-200 {% if section.settings.button_style_2 == 'primary' %}bg-brand-dark text-white hover:bg-neutral-dark{% elsif section.settings.button_style_2 == 'secondary' %}bg-brand-medium text-neutral-dark hover:bg-brand-light{% elsif section.settings.button_style_2 == 'outline' %}bg-transparent border-2 border-brand-dark text-brand-dark hover:bg-brand-dark/5{% else %}bg-transparent text-brand-dark hover:text-neutral-dark{% endif %}">
                {{ section.settings.button_label_2 }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

