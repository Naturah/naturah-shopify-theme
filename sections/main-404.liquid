{% comment %}
  @file 404 Not Found Page
  @summary Page displayed when visitors hit a non-existent URL
{% endcomment %}

<div class="py-16 md:py-24 container mx-auto px-4 text-center">
  <div class="max-w-md mx-auto">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">{{ 'general.404.title' | t }}</h1>
    <div class="mb-8 text-naturah-black/70">{{ 'general.404.subtext' | t }}</div>
    <a href="{{ routes.root_url }}" class="inline-block px-6 py-3 rounded-md font-medium text-base transition-colors duration-200 bg-naturah-green text-white hover:bg-naturah-green-dark">
      {{ 'general.404.link' | t }}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "404 Page",
  "tag": "section",
  "class": "section-404"
}
{% endschema %}