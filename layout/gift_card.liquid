<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="#748F24">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <title>{{ 'gift_card.issued.title' | t: value: formatted_initial_value, shop: shop.name }}</title>
    <meta name="description" content="{{ 'gift_card.issued.subtext' | t }}">

    {{ content_for_header }}

    {%- liquid
      assign body_font_bold = settings.type_body_font | font_modify: 'weight', 'bold'
      assign body_font_italic = settings.type_body_font | font_modify: 'style', 'italic'
      assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
    %}

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.rawgit.com/davidshimjs/qrcodejs/gh-pages/qrcode.min.js"></script>

    <!-- Critical CSS - inlined for faster loading -->
    <style>
      /* Critical CSS for initial render */
      :root {
        /* Neutral colors */
        --color-neutral-dark: #494E3B;
        --color-neutral-medium: #7E7F76;
        --color-neutral-light: #D9DAD5;
        
        /* Brand colors */
        --color-brand-dark: #748F24;
        --color-brand-medium: #B4D455;
        --color-brand-light: #DBEBAD;
        
        /* Background */
        --color-background: #FBFDF7;
        
        /* Text colors */
        --color-text: var(--color-neutral-dark);
        --color-text-light: var(--color-neutral-medium);
        
        /* Legacy variable names for compatibility */
        --color-primary: var(--color-brand-medium);
        --color-primary-dark: var(--color-brand-dark);
        --color-secondary: var(--color-background);
        --color-dark: var(--color-neutral-dark);
        --color-error: #E53935;
        
        --font-heading: 'Nunito', sans-serif;
        --font-body: 'Nunito', sans-serif;
      }
      
      *, *::before, *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      
      body {
        font-family: var(--font-body);
        color: var(--color-text);
        line-height: 1.5;
        background-color: var(--color-background);
      }
      
      /* Container */
      .container {
        width: 100%;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 1rem;
        padding-right: 1rem;
      }
      
      /* Utilities */
      .mx-auto {
        margin-left: auto;
        margin-right: auto;
      }
      
      .text-center {
        text-align: center;
      }
      
      .font-bold {
        font-weight: 700;
      }
      
      .text-3xl {
        font-size: 1.875rem;
      }
      
      .text-2xl {
        font-size: 1.5rem;
      }
      
      .text-lg {
        font-size: 1.125rem;
      }
      
      .text-sm {
        font-size: 0.875rem;
      }
      
      .my-8 {
        margin-top: 2rem;
        margin-bottom: 2rem;
      }
      
      .mb-8 {
        margin-bottom: 2rem;
      }
      
      .mb-6 {
        margin-bottom: 1.5rem;
      }
      
      .mb-4 {
        margin-bottom: 1rem;
      }
      
      .mt-4 {
        margin-top: 1rem;
      }
      
      .p-8 {
        padding: 2rem;
      }
      
      .p-3 {
        padding: 0.75rem;
      }
      
      .px-4 {
        padding-left: 1rem;
        padding-right: 1rem;
      }
      
      .py-12 {
        padding-top: 3rem;
        padding-bottom: 3rem;
      }
      
      /* Components */
      .rounded-lg {
        border-radius: 0.5rem;
      }
      
      .rounded-md {
        border-radius: 0.375rem;
      }
      
      .shadow-md {
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      }
      
      .bg-white {
        background-color: white;
      }
      
      .bg-neutral-light {
        background-color: var(--color-neutral-light);
      }
      
      .text-brand-dark {
        color: var(--color-brand-dark);
      }
      
      .text-neutral-medium {
        color: var(--color-neutral-medium);
      }
      
      .font-mono {
        font-family: monospace;
      }
      
      .flex {
        display: flex;
      }
      
      .items-center {
        align-items: center;
      }
      
      .justify-center {
        justify-content: center;
      }
      
      .w-full {
        width: 100%;
      }
      
      .max-w-xl {
        max-width: 36rem;
      }
      
      /* Button styles */
      .btn {
        display: inline-block;
        padding: 0.6rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        text-decoration: none;
        text-align: center;
        transition: all 0.2s ease;
        cursor: pointer;
        font-family: var(--font-body);
      }
      
      .btn-secondary {
        background-color: transparent;
        color: var(--color-neutral-dark);
        border: 1px solid var(--color-neutral-light);
      }
      
      .btn-secondary:hover {
        background-color: var(--color-neutral-light);
      }
      
      /* Print styles */
      @media print {
        body {
          background-color: white;
        }
        
        .gift-card-container {
          width: 100%;
          max-width: 100%;
        }
        
        .gift-card {
          border: 1px solid var(--color-neutral-light);
          box-shadow: none;
        }
        
        .gift-card-actions {
          display: none;
        }
      }
    </style>
  </head>

  <body>
    <main role="main" id="MainContent">
      {{ content_for_layout }}
    </main>
  </body>
</html> 